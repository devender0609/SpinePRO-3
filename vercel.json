{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/survey", "destination": "/survey.html" },
    { "source": "/results", "destination": "/results.html" }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
